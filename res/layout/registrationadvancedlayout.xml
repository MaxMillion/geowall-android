<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/barCompleteAdavanced"
        style="@style/barStyle"
        android:background="@drawable/bar" >

        <ImageView
            android:id="@+id/accountImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/account" />

        <LinearLayout
            android:id="@+id/barRegistrationAdvanced"
            style="@style/layoutStyleHorizontal"
            android:layout_toRightOf="@id/accountImage"
            android:gravity="right" >

            <Button
                android:id="@+id/saveButtonAdvanced"
                style="@style/buttonToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/finishButton" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView style="@style/layoutStyle" >

        <LinearLayout
            style="@style/layoutStyle"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/registrationAdvancedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/registrationAdvancedText"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/photoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/photoText"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/putImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/updateimage" />

            <LinearLayout
                style="@style/layoutStyleHorizontal"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/birthdayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/birthdayText"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/dateRegistrationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/formatDate"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/calendar" />

            <EditText
                android:id="@+id/countryText"
                style="@style/whiteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/normaltext"
                android:editable="false"
                android:hint="@string/countryText" />

            <EditText
                android:id="@+id/cityText"
                style="@style/whiteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/normaltext"
                android:hint="@string/cityText" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>