<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/insertMessage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layoutBackground"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/barCompleteAdavanced"
        style="@style/barStyle"
        android:background="@drawable/bar"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/accountImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/account" />

        <LinearLayout
            android:id="@+id/barRegistrationAdvanced"
            style="@style/layoutStyleHorizontal"
            android:layout_toRightOf="@id/accountImage"
            android:gravity="right" >

            <Button
                android:id="@+id/insertMessageButton"
                style="@style/buttonToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/sendText"
                 /> 
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/messagetext"
            android:gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLength="140"
            android:height="100dp"
            android:maxLines="5"
            android:imeOptions="actionDone"
        	android:inputType="textMultiLine"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black" >
        </EditText>
    </ScrollView>

    <LinearLayout
        style="@style/layoutStyle"
        android:layout_gravity="left"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" >

        <ImageButton
            android:id="@+id/facebookShareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/twitterShareButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter" />

        <ImageButton
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/updateimage" />

   
    </LinearLayout>

</LinearLayout>